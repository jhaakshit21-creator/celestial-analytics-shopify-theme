<div class="hero-section">
  <div class="hero-content">
    <h1 class="hero-title fade-in">{{ section.settings.title }}</h1>
    <p class="hero-subtitle fade-in">{{ section.settings.subtitle }}</p>
    <a href="{{ section.settings.cta_link }}" class="cta-button fade-in">{{ section.settings.cta_text }}</a>
  </div>
</div>

<style>
.hero-section{min-height:80vh;display:flex;align-items:center;justify-content:center;text-align:center;padding:2rem;background:linear-gradient(135deg,rgba(10,10,30,0.95),rgba(20,10,40,0.95));position:relative;overflow:hidden}
.hero-content{max-width:800px;z-index:10}
.hero-title{font-size:clamp(2rem,5vw,4rem);font-weight:700;margin-bottom:1.5rem;background:linear-gradient(135deg,#00d4ff,#a855f7);-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text}
.hero-subtitle{font-size:clamp(1rem,2.5vw,1.5rem);color:rgba(255,255,255,0.85);margin-bottom:2rem;line-height:1.6}
.cta-button{display:inline-block;padding:1rem 2.5rem;background:linear-gradient(135deg,#00d4ff,#a855f7);color:#fff;text-decoration:none;border-radius:50px;font-weight:600;transition:all 0.3s ease;box-shadow:0 10px 30px rgba(168,85,247,0.3)}
.cta-button:hover{transform:translateY(-3px);box-shadow:0 15px 40px rgba(168,85,247,0.5)}
@media(max-width:768px){.hero-section{min-height:70vh;padding:1rem}.cta-button{padding:0.875rem 2rem}}
</style>

{% schema %}
{
  "name":"Hero Section",
  "settings":[
    {"type":"text","id":"title","label":"Title","default":"Unlock Your Cosmic Potential"},
    {"type":"text","id":"subtitle","label":"Subtitle","default":"Discover personalized astrology insights powered by ancient wisdom and modern analytics"},
    {"type":"text","id":"cta_text","label":"Button Text","default":"Explore Services"},
    {"type":"url","id":"cta_link","label":"Button Link"}
  ],
  "presets":[{"name":"Hero Section"}]
}
{% endschema %}
