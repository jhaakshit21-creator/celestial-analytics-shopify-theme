<style>
.products-page{position:relative;min-height:100vh;padding:6rem 2rem 4rem;overflow:hidden}
.floating-orb{position:absolute;border-radius:50%;filter:blur(80px);opacity:0.3;animation:float 20s infinite ease-in-out}
.orb-1{width:400px;height:400px;background:radial-gradient(circle,#00d4ff,transparent);top:10%;left:-10%;animation-delay:0s}
.orb-2{width:350px;height:350px;background:radial-gradient(circle,#a855f7,transparent);bottom:10%;right:-10%;animation-delay:5s}
@keyframes float{0%,100%{transform:translate(0,0)rotate(0deg)}33%{transform:translate(50px,-50px)rotate(120deg)}66%{transform:translate(-30px,30px)rotate(240deg)}}
.products-hero{text-align:center;margin-bottom:4rem}
.products-title{font-size:clamp(2.5rem,5vw,4rem);font-weight:700;margin-bottom:1rem}
.products-subtitle{font-size:1.25rem;color:rgba(255,255,255,0.7)}
.products-container{display:grid;grid-template-columns:repeat(auto-fit,minmax(350px,1fr));gap:3rem;max-width:1000px;margin:0 auto 4rem}
.product-card{background:rgba(20,20,50,0.8);border:2px solid rgba(168,85,247,0.3);border-radius:24px;padding:2.5rem;position:relative;transition:all 0.4s cubic-bezier(0.4,0,0.2,1);backdrop-filter:blur(10px)}
.product-card:hover{transform:translateY(-10px)scale(1.02);border-color:rgba(168,85,247,0.8);box-shadow:0 20px 60px rgba(168,85,247,0.4)}
.product-card.featured{border-color:rgba(0,212,255,0.5);box-shadow:0 0 40px rgba(0,212,255,0.2)}
.product-card.featured:hover{border-color:rgba(0,212,255,1);box-shadow:0 20px 60px rgba(0,212,255,0.5)}
.product-badge{position:absolute;top:-12px;right:20px;background:linear-gradient(135deg,#a855f7,#00d4ff);padding:0.5rem 1.5rem;border-radius:20px;font-size:0.875rem;font-weight:600;animation:pulse 2s infinite}
.product-badge.premium{background:linear-gradient(135deg,#00d4ff,#a855f7)}
.product-icon{font-size:4rem;text-align:center;margin-bottom:1.5rem;animation:rotate-glow 10s infinite}
@keyframes rotate-glow{0%,100%{transform:rotate(0deg)filter:drop-shadow(0 0 10px currentColor)}50%{transform:rotate(180deg)filter:drop-shadow(0 0 20px currentColor)}}
.product-name{font-size:1.75rem;font-weight:700;margin-bottom:1rem;color:#fff}
.product-price{font-size:3rem;font-weight:700;margin:1.5rem 0;animation:glow-pulse 2s infinite}
@keyframes glow-pulse{0%,100%{text-shadow:0 0 20px currentColor}50%{text-shadow:0 0 40px currentColor,0 0 60px currentColor}}
.product-features{list-style:none;margin:2rem 0;padding:0}
.product-features li{padding:0.75rem 0;border-bottom:1px solid rgba(255,255,255,0.1);color:rgba(255,255,255,0.85);transition:all 0.3s}
.product-features li:hover{color:#00d4ff;padding-left:10px}
.product-note{font-size:0.875rem;color:rgba(255,255,255,0.6);margin:1rem 0}
.product-cta{width:100%;padding:1rem 2rem;background:linear-gradient(135deg,#a855f7,#00d4ff);border:none;border-radius:50px;color:#fff;font-size:1.125rem;font-weight:600;cursor:pointer;transition:all 0.3s;margin-top:1rem}
.product-cta:hover{transform:translateY(-3px);box-shadow:0 10px 30px rgba(168,85,247,0.5)}
.product-cta.premium{background:linear-gradient(135deg,#00d4ff,#a855f7)}
.products-comparison{max-width:1200px;margin:4rem auto;text-align:center}
.products-comparison h3{font-size:2rem;margin-bottom:3rem;color:#00d4ff}
.comparison-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(250px,1fr));gap:2rem}
.comparison-item{background:rgba(30,20,60,0.6);padding:2rem;border-radius:16px;border:1px solid rgba(0,212,255,0.2);transition:all 0.3s}
.comparison-item:hover{transform:translateY(-5px);border-color:rgba(0,212,255,0.6)}
.comp-icon{font-size:3rem;margin-bottom:1rem}
.comparison-item h4{font-size:1.25rem;margin-bottom:0.75rem;color:#fff}
.comparison-item p{color:rgba(255,255,255,0.7);line-height:1.6}
@media(max-width:768px){.products-page{padding:5rem 1rem 3rem}.products-container{grid-template-columns:1fr;gap:2rem}}
</style>

<script>
window.addEventListener('DOMContentLoaded',()=>{
const cards=document.querySelectorAll('.product-card');
cards.forEach((card,i)=>{
setTimeout(()=>card.style.opacity='1',i*200);
card.addEventListener('mouseenter',()=>{
card.style.transform='translateY(-15px)scale(1.03)rotate(1deg)';
});
card.addEventListener('mouseleave',()=>{
card.style.transform='translateY(0)scale(1)rotate(0deg)';
});
});
});
</script>
