{% section 'header' %}

<div class="page-container fade-in-up">
  <div class="page-wrapper">
    <div class="page-header">
      <h1 class="page-title glow-text">{{ page.title }}</h1>
    </div>
    <div class="page-content">
      {{ page.content }}
    </div>
  </div>
</div>

{% section 'footer' %}

<style>
.page-container{min-height:70vh;padding:6rem 2rem 4rem;position:relative}
.page-wrapper{max-width:900px;margin:0 auto}
.page-header{text-align:center;margin-bottom:3rem}
.page-title{font-size:clamp(2.5rem,5vw,4rem);font-weight:700;margin-bottom:1rem}
.page-content{font-size:1.125rem;line-height:1.8;color:rgba(255,255,255,0.85)}
.page-content h2{font-size:2rem;margin:2rem 0 1rem;color:#00d4ff}
.page-content h3{font-size:1.5rem;margin:1.5rem 0 1rem;color:#a855f7}
.page-content p{margin-bottom:1.5rem}
.page-content a{color:#00d4ff;text-decoration:none;transition:color 0.3s}
.page-content a:hover{color:#a855f7}
.page-content ul,.page-content ol{margin:1rem 0 1rem 2rem}
.page-content li{margin-bottom:0.5rem}
@media(max-width:768px){.page-container{padding:5rem 1rem 3rem}}
</style>
